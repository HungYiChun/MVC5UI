
@{
    ViewBag.Title = "HashSHA384";
}

<h2>HashSHA384</h2>

<div class="col-md-12">
    @if (ViewData["Result"] != null)
    {
        <br />
        <h4>@ViewData["Result"].ToString()</h4>
    }

    <br />

    @using (Html.BeginForm())
    {
        <h3>HashSHA384: </h3>
        <div class="form-horizontal">
            <div class="form-group">
                <div>
                    @Html.TextBox("txtString", "", new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="submit" value="送出" class="btn btn-default btn-lg" />
                </div>
            </div>
        </div>
    }

    <br />
</div>